<div class="app-dashboard shrink-medium">
    <div class="row expanded app-dashboard-top-nav-bar">
        <form action="/api/searches" method="GET">
            <div class="columns medium-2">
                {{!-- <button data-toggle="app-dashboard-sidebar" class="menu-icon hide-for-medium"></button> --}}
                {{!-- <button type="submit" id="searchBtn" class="app-dashboard-logo"></button> --}}

            </div>
            <div class="columns show-for-medium">
                <div class="app-dashboard-search-bar-container">
                    <input name="stock" class="app-dashboard-search" type="text" placeholder="Search" id="search">
                    {{!-- <button type="submit" class="primary button expanded search-button"></button> --}}
                    {{!-- <i class="app-dashboard-search-icon fa fa-search"></i> --}}
                </div>
            </div>
        </form>
    </div>

    <div class="app-dashboard-body off-canvas-wrapper">
        <div id="app-dashboard-sidebar"
            class="app-dashboard-sidebar position-left off-canvas off-canvas-absolute reveal-for-medium"
            data-off-canvas>
            <div class="app-dashboard-sidebar-title-area">
                <div class="app-dashboard-close-sidebar">
                    <h3 class="app-dashboard-sidebar-block-title">Saved Stocks</h3>
                    <!-- Close button -->
                    <button id="close-sidebar" data-app-dashboard-toggle-shrink
                        class="app-dashboard-sidebar-close-button show-for-medium" aria-label="Close menu"
                        type="button">
                        <span aria-hidden="true"><a href="#"><img
                                    src="https://iconmonstr.com/wp-content/g/gd/makefg.php?i=../assets/preview/2017/png/iconmonstr-arrow-64.png&r=0&g=0&b=0"
                                    class="" height="40" width="40"></span>
                    </button>
                </div>
                <div class="app-dashboard-open-sidebar">
                    <button id="open-sidebar" data-app-dashboard-toggle-shrink
                        class="app-dashboard-open-sidebar-button show-for-medium" aria-label="open menu" type="button">
                        <span aria-hidden="true"><a href="#"><img
                                    src="https://iconmonstr.com/wp-content/g/gd/makefg.php?i=../assets/preview/2012/png/iconmonstr-arrow-25.png&r=0&g=0&b=0"
                                    class="" height="40" width="40"></span>
                    </button>
                </div>
            </div>
            <div class="app-dashboard-sidebar-inner">
                <ul class="menu vertical">
                    <!--  
                    <li><a href="#" class="is-active">
                            <i class="large fa fa-institution"></i><span
                                class="app-dashboard-sidebar-text">{{Name}}</span>
                        </a></li>
                    -->

                    {{#each searches as |search|}}
                    <li><a href="#" class="is-active">
                            <i class="large fa fa-institution"></i><span
                                class="app-dashboard-sidebar-text">{{text}}</span>
                        </a></li>
                    {{/each}}
   
                </ul>
            </div>
        </div>

        <div class="app-dashboard-body-content off-canvas-content" data-off-canvas-content>
            <h2 class="text-center">{{name}}'s Dashboard</h2>

            <div class="card-info success">
                <div class="card-info-label">
                    <div class="card-info-label-text" id="stockSymbol">
                      Ticker
                    </div>
                </div>
                <div class="card-info-content">
                    <h3 class="lead" id="stockName">Company</h3>
                   <p id="stockCountry">Country</p>
                    <p id="stockSector">Exchange</p>
                    <p id="stockDescription">Description</p>
                   <p id="stockOpen">Today's Open Price</p>
                   <p id="stockHigh"> Today's High</p>
                   <p id="stockLow">Today's Low</p>
                   <p id="stockPrice">Current Price</p>
                </div>
            </div>


        </div>
    </div>
</div>

<script src="/js/dashboard.js"></script>